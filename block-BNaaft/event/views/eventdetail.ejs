<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/stylesheets/style.css">
    <title>Document</title>
</head>
<body>
    <header>
        <h1>
            Event Management
        </h1>
    </header>
    <main>
        <section>
            <h3>
                <%= events.title %>
            </h3>
            <p>
                <%= events.summary %>
            </p>
            <p>
                <%= events.start_date %> - <%= events.end_date %>
            </p>
            <p>
                <%= events.host %> 
            </p>
            <p>
                <%= events.location %>
            </p>
            <h4>
                <%= events.likes %> 
            </h4>
            <a href="/event/<%= events.id %>/likes ">
                <button>
                    Like
                </button>
            </a>
            <div class="event-detail-button">
                <a href="/event/<% events.id %>/delete ">
                    <button>
                        Delete
                    </button>
                </a>
                <a href="/event/<% events.id %>/edit">
                    <button>
                        Edit
                    </button>
                </a>
            </div>
        </section>        
    </main>
</body>
</html>